!!!
%html
  %head
    %title Arcader
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.background
      %header.navbar
        %nav.navbar-inner
          .container
            %h2.header
              = link_to "Arcader", games_path
            = form_tag games_path, :class => "navbar-search pull-right", :method => :get do
              = text_field_tag :name, nil, :class => "search-query span3", :placeholder => "Search"
            %ul.nav
              %li
                = link_to "Games", games_path
              %li.break
                = "|"
              %li
                = link_to "Users", users_path
              %li.break
                = "|"
              %li.scores
                = link_to "Scores", matches_path
      %div.logo
      %h1.logo
        = link_to "Arcader Games", games_path
      %div.login
        - if current_user
          %p Welcome,
            = current_user.name
          %h5.logout
            = link_to 'Logout', session_path(session), method: :delete, data: {confirm: 'Are you sure?' }
        - else
          %h5.login
            = link_to 'Login', login_path
          %br
          %h5.login
            = link_to "Sign Up", new_user_path
      = yield
  %footer
    %div.footer